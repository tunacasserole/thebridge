# MCP Hub Server Environment Variables
# Copy to .env and fill in values for servers you want to use

# Server Configuration
PORT=3001
CORS_ORIGIN=*

# GitHub MCP
GITHUB_PERSONAL_ACCESS_TOKEN=

# Slack MCP
SLACK_BOT_TOKEN=
SLACK_TEAM_ID=

# Metabase MCP
METABASE_URL=
METABASE_API_KEY=

# Kubernetes MCP
KUBECONFIG=~/.kube/config

# Prometheus MCP
PROMETHEUS_URL=

# Gmail MCP
GMAIL_OAUTH_CLIENT_ID=
GMAIL_OAUTH_CLIENT_SECRET=

# Google Calendar MCP
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Snowflake MCP
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_DATABASE=
SNOWFLAKE_SCHEMA=

# Airbyte MCP
AIRBYTE_API_KEY=

# Argo CD MCP
ARGOCD_SERVER=
ARGOCD_AUTH_TOKEN=

# Grafana MCP
GRAFANA_URL=
GRAFANA_API_KEY=

# Figma MCP
FIGMA_PERSONAL_ACCESS_TOKEN=

# Zoom MCP
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=

# Shell MCP (restrictive by default for security)
MCP_SHELL_SECURITY_MODE=restrictive
